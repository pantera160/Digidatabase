<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
	http://www.springframework.org/schema/beans/spring-beans-2.5.xsd http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd">

    <bean
            class="org.springframework.beans.factory.annotation.AutowiredAnnotationBeanPostProcessor"/>

    <context:annotation-config/>

    <bean id="DataControllerBean" class="be.usgprofessionals.controller.DataController">
    </bean>

    <bean id="DatadumpDBControllerBean" class="be.usgprofessionals.controller.DatadumpDBController">
    </bean>

    <bean id="DigigramDBControllerBean" class="be.usgprofessionals.controller.DigigramDBController">
    </bean>
</beans>
